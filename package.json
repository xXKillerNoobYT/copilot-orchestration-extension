{
    "name": "copilot-orchestration-extension",
    "displayName": "Copilot Orchestration Extension (COE)",
    "description": "Lightweight planning & orchestration layer for GitHub Copilot and other AI coding agents inside VS Code.",
    "version": "0.0.1",
    "publisher": "xXKillerNoobYT",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "coe.sayHello",
                "title": "COE: Say Hello"
            },
            {
                "command": "coe.refreshAgents",
                "title": "COE: Refresh Agents"
            },
            {
                "command": "coe.refreshTickets",
                "title": "COE: Refresh Tickets"
            },
            {
                "command": "coe.refreshConversations",
                "title": "COE: Refresh Conversations"
            },
            {
                "command": "coe.planTask",
                "title": "COE: Plan Task"
            },
            {
                "command": "coe.verifyTask",
                "title": "COE: Verify Task"
            },
            {
                "command": "coe.verifyLastTicket",
                "title": "COE: Verify Last Ticket"
            },
            {
                "command": "coe.openTicket",
                "title": "COE: Open Ticket"
            },
            {
                "command": "coe.viewTicketProgress",
                "title": "View Current Progress"
            },
            {
                "command": "coe.updateTicketStatus",
                "title": "Update Status Manually"
            },
            {
                "command": "coe.addTicketComment",
                "title": "Add User Comment"
            },
            {
                "command": "coe.clearConversationHistory",
                "title": "Clear Conversation History"
            },
            {
                "command": "coe.researchWithAgent",
                "title": "COE: Research with Agent"
            },
            {
                "command": "coe.askAnswerAgent",
                "title": "COE: Ask Answer Agent"
            },
            {
                "command": "coe.askAnswerAgentContinue",
                "title": "COE: Continue Answer Agent Chat"
            },
            {
                "command": "coe.enableAgent",
                "title": "Enable Agent"
            },
            {
                "command": "coe.disableAgent",
                "title": "Disable Agent"
            },
            {
                "command": "coe.toggleAutoProcessing",
                "title": "COE: Toggle Auto Processing"
            },
            {
                "command": "coe.processTicket",
                "title": "Process This Ticket"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "COE Configuration",
            "properties": {
                "coe.autoProcessTickets": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable automatic ticket processing. When enabled (Auto mode), new tickets are automatically routed to agents and processed with LLM. When disabled (Manual mode - default), tickets stay in 'Pending' status awaiting manual action."
                },
                "coe.enablePlanningAgent": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable the Planning Agent for task decomposition and planning."
                },
                "coe.enableOrchestratorAgent": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable the Orchestrator Agent for coordinating multi-agent workflows."
                },
                "coe.enableAnswerAgent": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable the Answer Agent for answering user questions with conversation history."
                },
                "coe.enableVerificationAgent": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable the Verification Agent for validating completed tasks."
                },
                "coe.enableResearchAgent": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable the Research Agent for detailed research queries and MD reports. When enabled, allows running time-intensive research operations (~10 min delay)."
                }
            }
        },
        "menus": {
            "view/item/context": [
                {
                    "command": "coe.enableAgent",
                    "when": "view == coe-agents && viewItem == coe-agent-disabled",
                    "group": "agent@1"
                },
                {
                    "command": "coe.disableAgent",
                    "when": "view == coe-agents && viewItem == coe-agent-enabled",
                    "group": "agent@1"
                },
                {
                    "command": "coe.processTicket",
                    "when": "view == coe-tickets && viewItem == ticket",
                    "group": "processing@1"
                },
                {
                    "command": "coe.viewTicketProgress",
                    "when": "view == coe-tickets && viewItem == ticket",
                    "group": "navigation@2"
                },
                {
                    "command": "coe.updateTicketStatus",
                    "when": "view == coe-tickets && viewItem == ticket",
                    "group": "status@3"
                },
                {
                    "command": "coe.addTicketComment",
                    "when": "view == coe-tickets && viewItem == ticket",
                    "group": "comment@3"
                },
                {
                    "command": "coe.clearConversationHistory",
                    "when": "view == coe-conversations && viewItem == coe-conversation",
                    "group": "conversation@1"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "coe-views",
                    "title": "COE",
                    "icon": "media/coe-icon.svg"
                }
            ]
        },
        "views": {
            "coe-views": [
                {
                    "id": "coe-agents",
                    "name": "Agents",
                    "icon": "$(organization)"
                },
                {
                    "id": "coe-tickets",
                    "name": "Tickets",
                    "icon": "$(checklist)"
                },
                {
                    "id": "coe-conversations",
                    "name": "Conversations",
                    "icon": "$(comment-discussion)"
                }
            ]
        },
        "statusBar": [
            {
                "id": "coe.status",
                "text": "$(rocket) COE Ready",
                "command": "coe.sayHello",
                "alignment": "right",
                "priority": 100
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "test": "jest --watch",
        "test:once": "jest"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.6",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "sqlite3": "^5.1.7"
    }
}