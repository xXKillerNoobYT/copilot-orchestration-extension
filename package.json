{
    "name": "copilot-orchestration-extension",
    "displayName": "Copilot Orchestration Extension (COE)",
    "description": "Lightweight planning & orchestration layer for GitHub Copilot and other AI coding agents inside VS Code.",
    "version": "0.0.1",
    "publisher": "xXKillerNoobYT",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "coe.sayHello",
                "title": "COE: Say Hello"
            }
        ],
        "statusBar": [
            {
                "id": "coe.status",
                "text": "$(rocket) COE Ready",
                "command": "coe.sayHello",
                "alignment": "right",
                "priority": 100
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "test": "jest --watch",
        "test:once": "jest"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^16.x",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.6",
        "typescript": "^5.9.3"
    }
}
